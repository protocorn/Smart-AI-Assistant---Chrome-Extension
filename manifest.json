{
  "manifest_version": 3,
  "name": "AI Email Assistant",
  "version": "1.0",
  "description": "A Chrome extension that helps you compose emails using AI.",
  "permissions": [
    "activeTab", 
    "scripting",
    "identity",
    "tabs",
    "identity.email",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"], 
      "js": ["content.js"]
    }
  ]
}