{
  "manifest_version": 3,
  "name": "Smart Gmail Assistant",
  "version": "1.0",
  "description": "A Chrome extension that helps you compose emails using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "identity",
    "tabs",
    "identity.email",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "smart_assistant_icon.png",
      "32": "smart_assistant_icon.png",
      "48": "smart_assistant_icon.png",
      "128": "smart_assistant_icon.png"
    }
  },
  "icons": {
    "16": "smart_assistant_icon.png",
    "32": "smart_assistant_icon.png",
    "48": "smart_assistant_icon.png",
    "128": "smart_assistant_icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "oauth2": {
    "client_id": "496624467603-ub215esr0vep74g14lf6svk4imq3cjjr.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.send",
      "https://www.googleapis.com/auth/gmail.modify"
    ]
  }
}
